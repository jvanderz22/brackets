<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th> Uniq Game ID </th>
      <th>Bracket</th>
      <th>Game</th>
      <th>Teams</th>
      <th>Winner ID</th>
      <th>In bracket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.uniq_game_id %></td>
        <td><%= game.bracket_id %></td>
        <td><%= game.bracket_game_id %></td>
        <td><%= game.teams.map { |team| team.id } %></td>
        <td><%= game.winner_id %></td>
        <td><%= game.in_bracket %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

